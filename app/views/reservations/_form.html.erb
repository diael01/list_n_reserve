<%= simple_form_for @reservation  do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :itemId %>
    <%= f.input :players, collection: 1..10 %>
    <%= f.input :priceId, collection: @prices %>
    <!--<%= f.input :user %>-->
    <%= f.input :comments %>
    <%= f.input :starttime %>
    <%= f.input :endtime %>
    <%= f.input :facilityId %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <% if !@reservation.id.nil? %>
    <%= @reservation.inspect %>
    <%= link_to 'Cancel', @reservation, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
<% end %>
